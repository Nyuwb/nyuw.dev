<aside class="relative w-64 bg-white shadow h-screen justify-between hidden sm:block">
    <div class="p-6 flex items-center">
        <img class="border-2 border-aqua-forest rounded-full" src="{{ asset('build/images/nyuwking_500.png') }}" alt="Logo" />
    </div>
	<nav class="pt-4">
		<ul class="">
			{% for item in menu.items %}
				<li class="flex w-full justify-between text-gray-600 cursor-pointer items-center mb-6 px-8">
					<a href="{{ path(item.route) }}">
						<i class="{{ item.icon }} w-4"></i>
						<span class="text-sm ml-2">{{ item.label }}</span>
					</a>
				</li>
			{% endfor %}
		</ul>
	</nav>
    <div class="absolute bottom-0 w-full py-2">
        <div class="w-full text-gray-600 text-sm mb-3 text-center pr-2"># Mes r√©seaux</div>
        <div class="flex flex-row items-center justify-around px-6 text-xl">
            {% for item in socials.items %}
                <a href="{{ item.link }}" class="{{ item.class }}" target="_blank" title="{{ item.label }}"><i class="fa-brands {{ item.icon }}"></i></a>
            {% endfor %}
        </div>
    </div>
</aside>